# ITFY E-Voting Backend Configuration

# ================================
# Server Configuration
# ================================
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# ================================
# Database Configuration
# ================================
MONGODB_URI=mongodb://localhost:27017/itfy-evoting
DB_MAX_RETRIES=5
DB_RETRY_DELAY_MS=5000

# ================================
# Redis/Cache Configuration
# ================================
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY_MS=2000

# ================================
# JWT Configuration
# ================================
# SECURITY: Generate strong random secrets for production
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=your-jwt-secret-here-replace-with-random-string
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here-replace-with-random-string
JWT_EXPIRATION=30m
JWT_REFRESH_EXPIRATION=7d

# ================================
# Email Configuration
# ================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password-or-app-password
EMAIL_FROM=your-email@example.com

# ================================
# Frontend Configuration
# ================================
FRONTEND_URL=http://localhost:3001

# ================================
# Payment Configuration (Optional)
# ================================
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# ================================
# File Upload Configuration
# ================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ================================
# Console Configuration
# ================================
