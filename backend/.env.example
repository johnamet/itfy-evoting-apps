# ITFY E-Voting Backend Configuration
# Copy this file to .env and replace placeholder values with your actual configuration
# WARNING: Never commit your actual .env file to version control!

# ================================
# Server Configuration
# ================================
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# ================================
# Database Configuration
# ================================
MONGODB_URI=mongodb://localhost:27017/itfy-evoting
DB_MAX_RETRIES=5
DB_RETRY_DELAY_MS=5000

# ================================
# Redis/Cache Configuration
# ================================
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY_MS=2000

# ================================
# JWT Configuration
# ================================
# Generate strong random secrets for production (minimum 256 bits for HS256)
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-here-change-this-in-production
JWT_EXPIRATION=30m
JWT_REFRESH_EXPIRATION=7d

# ================================
# Email Configuration
# ================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-app-password-here
EMAIL_FROM=your-email@example.com

# ================================
# Frontend Configuration
# ================================
FRONTEND_URL=http://localhost:3001

# ================================
# Payment Configuration (Optional)
# ================================
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# ================================
# File Upload Configuration
# ================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ================================
# Console Configuration
# ================================
